<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MeActivity">

    <include layout="@layout/nav_bar"></include>

    <TextView
    android:id="@+id/Useraccount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginsize"
    android:text="账号："
    android:textSize="@dimen/title_size"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/marginsize"/>
    <TextView
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称："
        android:layout_marginLeft="@dimen/marginsize"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginsize"/>


    <TextView
        android:id="@+id/Usersex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:layout_marginLeft="@dimen/marginsize"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginsize"/>

    <TextView
        android:id="@+id/Usersignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名："
        android:layout_marginLeft="@dimen/marginsize"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginsize"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:layout_marginTop="@dimen/marginsize"
        android:text="修改密码"
        android:gravity="center"
        android:textSize="@dimen/info_size"
        android:visibility="gone"
        android:layout_gravity="center"
        android:onClick="onChangeClick"
        android:background="@drawable/commit_item_select"/>




    <Button
        android:id="@+id/logoutbtn"
        style="@style/commitBtn"
        android:text="退出登录"
        android:onClick="onLogoutClick"
        android:layout_marginTop="@dimen/marginsize"/>
</LinearLayout>